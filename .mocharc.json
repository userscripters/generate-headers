{
    "$schema": "https://json.schemastore.org/mocharc.json",
    "extensions": [
        "js",
        "ts",
        "tsx"
    ],
    "spec": [
        "test/**/*.spec.*"
    ],
    "node-option": [
        "experimental-specifier-resolution=node",
        "loader=ts-node/esm"
    ],
    "bail": true,
    "check-leaks": true,
    "recursive": true
}
