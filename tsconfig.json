{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "allowJs": true,
        "checkJs": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "target": "es2019",
        "module": "es2020",
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noErrorTruncation": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "outDir": "dist"
    },
    "exclude": ["dist"],
    "include": ["src"]
}
